            </StackLayout>

            <StackLayout Orientation="Vertical" VerticalOptions="End">
                <!-- bottom controls -->
                <Button x:Name="BtnPembahasan" Text="Pembahasan" Margin="10,0,10,10" Clicked="BtnPembahasan_Clicked"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>